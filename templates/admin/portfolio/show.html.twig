{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_show' %}

{% block main %}
    <h1>{{ project.title }}</h1>

    <p class="post-metadata">
        <span class="metadata"><i class="fa fa-calendar"></i> {{ project.createdAt|format_datetime(locale='fr', pattern="dd MMMM YYYY") }}</span>
        <span class="metadata"><i class="fa fa-user"></i> {{ project.author.fullName }}</span>
    </p>

    <div class="well">
        <p class="m-b-0"><strong>Résumé</strong>: {{ project.summary }}</p>
    </div>

    {{ project.content|markdown_to_html|sanitize_html }}

    {{ include('admin/portfolio/project_tags.html.twig') }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_project_edit', {id: project.id}) }}" class="btn btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> Modifier
        </a>
    </div>

    <div class="section">
        {{ include('admin/portfolio/_delete_form.html.twig', {project: project}, with_context = false) }}
    </div>
    {{ parent() }}
{% endblock %}

{% extends 'admin/layout.html.twig' %}
{% block body_id 'admin_project_index' %}
{% block main %}
    <h1>Liste des projets</h1>
    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Date de publication</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.title }}</td>
                <td>{{ project.publishedAt|format_datetime('medium', 'short', '', 'UTC') }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_project_show', {id: project.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> Visualiser
                        </a>

                        <a href="{{ path('admin_project_edit', {id: project.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> Modifier
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun projet enregistr√©</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_project_new') }}" class="btn btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un projet
        </a>
    </div>
{% endblock %}

{% extends 'admin/layout.html.twig' %}
{% block body_id 'user_edit' %}
{% block main %}
    <h1>Modifier mes informations</h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Enregistrer
        </button>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('user_change_password') }}" class="btn btn-block btn-danger">
            <i class="fa fa-lock" aria-hidden="true"></i> Changer le mot de passe
        </a>
    </div>
    {{ parent() }}
{% endblock %}

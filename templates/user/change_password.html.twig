{% extends 'admin/layout.html.twig' %}

{% block body_id 'user_password' %}

{% block main %}
	<h1>Modifier le mot de passe</h1>

	<div class="alert alert-info" role="alert">Après avoir modifié votre mot de passe, vous serez déconnecté de l'application.</div>

	{{ form_start(form) }}
	{{ form_widget(form) }}

	<button type="submit" class="btn btn-primary">
		<i class="fa fa-save" aria-hidden="true"></i>
		Enregistrer
	</button>
	{{ form_end(form) }}
{% endblock %}

{% block sidebar %}
	<div class="section">
		<a href="{{ path('user_edit') }}" class="btn btn-block btn-danger">
			<i class="fa fa-edit" aria-hidden="true"></i>
			Modifier
		</a>
	</div>
	{{parent()}}
{% endblock %}
